{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-10">
            <h1>Author</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ author.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ author.name }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ author.username }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ author.title }}</td>
                </tr>
                <tr>
                    <th>Short Bio</th>
                    <td>{{ author.shortBio }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ author.phone }}</td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex">
                <a href="{{ path('author_index') }}" class="btn btn-dark mx-2">back to list</a>

                <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-warning mx-2">edit</a>

                {{ include('author/_delete_form.html.twig') }}
            </div>

        </div>
    </div>

{% endblock %}
