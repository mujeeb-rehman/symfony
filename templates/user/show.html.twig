{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-10">
            <h1>User</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex">
                <a href="{{ path('user_index') }}" class="btn btn-dark mx-2">back to list</a>

                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning mx-2">edit</a>

                {{ include('user/_delete_form.html.twig') }}
            </div>

        </div>
    </div>
{% endblock %}
